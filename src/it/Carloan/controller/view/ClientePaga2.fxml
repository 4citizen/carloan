<BorderPane prefHeight="500.0" prefWidth="688.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.Carloan.controller.ClientePaga2Controller">
   <top>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_CENTER" prefHeight="49.0" prefWidth="122.0" text="Carloan" textOverrun="CLIP">
